<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/text_size_15dp"
    android:background="@drawable/wait_bg">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="@dimen/text_size_30dp"
            android:layout_height="@dimen/text_size_30dp"
            />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中..."
            android:layout_marginLeft="@dimen/text_size_15dp"
            android:gravity="center"
            android:layout_alignBottom="@id/progress"
            android:layout_alignTop="@id/progress"
            android:layout_toRightOf="@id/progress"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_12sp"/>

</RelativeLayout>
